@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"/>

    <style>
        body {
            font-family: "Segoe UI", sans-serif;
            background-color: #f5f6fa;
            margin: 0;
        }

        /* Sidebar */
        .sidebar {
            width: 220px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #4a6fa5;
            color: #fff;
            padding-top: 20px;
            display: flex;
            flex-direction: column;
        }

        .sidebar .nav-link {
            color: #f8f9fa;
            padding: 12px 20px;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 10px;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .sidebar .nav-link:hover {
            background-color: #6b8fbf;
            transform: translateX(3px);
        }

        .sidebar .nav-link.active {
            background-color: #365880;
            color: #ffc107;
            box-shadow: inset 3px 0 0 #ffc107;
        }

        .sidebar i {
            font-size: 1.2rem;
        }

        /* Header */
        .header {
            height: 60px;
            position: fixed;
            top: 0;
            left: 220px;
            right: 0;
            background-color: #ffffff;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            z-index: 1000;
        }

        .user-menu {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-menu button, .user-menu a {
            display: flex;
            align-items: center;
            gap: 5px;
            font-weight: 500;
            border-radius: 5px;
            transition: all 0.2s ease;
        }

        .user-menu button:hover, .user-menu a:hover {
            transform: translateY(-1px);
        }

        /* Main content */
        .main-content {
            margin-left: 220px;
            margin-top: 60px;
            padding: 20px;
        }

        /* Responsive */
        <text>
        @@media (max-width: 768px) {
            .sidebar {
                position: relative;
                width: 100%;
                height: auto;
            }
            .header {
                left: 0;
            }
            .main-content {
                margin-left: 0;
                margin-top: 70px;
            }
        }
        </text>
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")" href="/">
            <i class="bi bi-house-door"></i> Trang chủ
        </a>
        <a class="nav-link @(currentController == "AdminOperations" && currentAction == "AllOrders" ? "active" : "")" href="/AdminOperations/AllOrders">
            <i class="bi bi-receipt"></i> Đơn hàng
        </a>
        <a class="nav-link @(currentController == "Stock" ? "active" : "")" href="/Stock/Index">
            <i class="bi bi-archive"></i> Tồn kho
        </a>
        <a class="nav-link @(currentController == "Genre" ? "active" : "")" href="/Genre/Index">
            <i class="bi bi-collection"></i> Thể loại
        </a>
        <a class="nav-link @(currentController == "Book" ? "active" : "")" href="/Book/Index">
            <i class="bi bi-book"></i> Sách
        </a>
        <a class="nav-link @(currentController == "Reports" ? "active" : "")" href="/Reports/TopFiveSellingBooks">
            <i class="bi bi-bar-chart"></i> Sách bán chạy
        </a>
    </div>

    <!-- Header -->
    <div class="header">
        <div class="fw-bold fs-5">Admin Panel</div>
        <div class="user-menu">
            <span>@User.Identity?.Name</span>
            <a href="/Identity/Account/Manage/Index" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-gear"></i> Quản lí
            </a>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index","Home")" class="m-0">
                <button type="submit" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-box-arrow-right"></i> Đăng xuất
                </button>
            </form>
        </div>
    </div>

    <!-- Main content -->
    <div class="main-content">
        <partial name="_Notifications" />
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
