@model IEnumerable<BookShoppingCartMvcUI.Models.DTOs.GenreDTO>

<div class="category-section-wrapper bg-white bg-opacity-75 p-3 rounded shadow-sm">
    <h5 class="fw-bold mb-3 text-danger">
        <i class="bi bi-grid-3x3-gap-fill me-2"></i> Danh mục sản phẩm
    </h5>

    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            @foreach (var genre in Model)
            {
                var imagePath = string.IsNullOrEmpty(genre.ThumbnailImage)
                ? Url.Content("~/images/NoImage.png")
                : Url.Content("~/images/" + genre.ThumbnailImage);

                <div class="swiper-slide text-center">
                    <a asp-controller="Home" asp-action="Index" asp-route-genreId="@genre.Id"
                       class="text-decoration-none text-dark">
                        <div class="category-item bg-white p-2 rounded shadow-sm mx-1">
                            <img src="@imagePath" alt="@genre.GenreName"
                                 class="img-fluid mb-2 rounded"
                                 style="height: 100px; width: 100px; object-fit: cover;" />
                            <div class="fw-semibold small text-danger">@genre.GenreName</div>
                        </div>
                    </a>
                </div>
            }
        </div>

        <!-- Nút điều hướng Swiper -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</div>
