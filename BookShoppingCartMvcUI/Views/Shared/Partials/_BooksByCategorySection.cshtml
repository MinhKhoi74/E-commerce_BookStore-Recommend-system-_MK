@model BookShoppingCartMvcUI.Models.DTOs.BooksByGenreSectionModel

<div class="genre-list-book mb-5">
    <!-- Khung tiêu đề trắng -->
    <div class="bg-white rounded px-3 py-2 shadow-sm d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0 text-danger fw-bold">@Model.GenreName</h5>
        <div>
            <a asp-controller="Home" asp-action="Index" asp-route-genreId="@Model.GenreId" class="text-decoration-none fw-medium text-primary">
                Xem tất cả >
            </a>
        </div>
    </div>

    <!-- Swiper danh sách sách -->
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            @foreach (var book in Model.Books)
            {
                @await Html.PartialAsync("~/Views/Shared/Partials/_BookCard.cshtml", book)
            }

        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</div>
