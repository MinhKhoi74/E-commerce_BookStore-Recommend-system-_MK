@model ShoppingCart
@{
    ViewData["Title"] = "GetUserCart";
}

<div class="container mt-4">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {
        <h4 class="mb-4 fw-bold text-primary text-center display-5">
            GIỎ HÀNG CỦA BẠN
        </h4>


        <div class="mb-3">
            <a class="btn btn-outline-primary" href="/Home">
                <i class="bi bi-arrow-left-circle me-1"></i> Tiếp tục mua sắm
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered align-middle text-center">
                <thead style="background: linear-gradient(to right, #2c3e50, #16a085);" class="text-light">
                    <tr>
                        <th>Sách</th>
                        <th>Ảnh</th>
                        <th>Thể loại</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody style="background: linear-gradient(to right, #d0eefd, #ffffff);">
                    @foreach (var item in Model.CartDetails)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Book.BookName</td>
                            <td>
                                <img src="/images/@(string.IsNullOrEmpty(item.Book.Image) ? "NoImage.png" : item.Book.Image)"
                                     class="img-thumbnail" style="width: 80px; height: 100px; object-fit: cover;" />
                            </td>
                            <td>
                                <span class="badge" style="background-color: #ffeeba; color: #856404;">
                                    @item.Book.Genre.GenreName
                                </span>
                            </td>
                            <td>@item.Book.Price X @item.Quantity</td>
                            <td class="fw-bold text-danger">@((item.Book.Price * item.Quantity).ToString("N0"))</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    @if (item.Quantity < item.Book.Stock.Quantity)
                                    {
                                        <a class="btn btn-sm btn-success" href="/Cart/AddItem?bookId=@item.BookId&&redirect=1">+</a>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Out of stock</span>
                                    }

                                    <a class="btn btn-sm btn-warning" href="/Cart/RemoveItem?bookId=@item.BookId">-</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <h5 class="fw-bold">
                Tổng tiền:
                <span class="text-success">
                    @Model.CartDetails.Select(item => item.Book.Price * item.Quantity).Sum().ToString("N0") ₫
                </span>
            </h5>
            <a class="btn btn-primary btn-lg" href="/Cart/Checkout">
                Thanh toán <i class="bi bi-arrow-right-circle ms-1"></i>
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-5">
            <h5>Giỏ hàng của bạn đang trống.</h5>
            <a class="btn btn-outline-primary mt-2" href="/Home">
                <i class="bi bi-arrow-left-circle me-1"></i> Tiếp tục mua sắm
            </a>
        </div>
    }
</div>
