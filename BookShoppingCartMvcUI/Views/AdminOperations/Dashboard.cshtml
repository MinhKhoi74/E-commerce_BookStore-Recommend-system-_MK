@model DashboardViewModel

@{
    Layout = null; // hoặc _AdminLayout nếu muốn
}
@{
    var orderStatusMap = new Dictionary<int, string>
    {
        {1, "Đang chờ xử lý"},   // Pending
        {2, "Đã gửi hàng"},       // Shipped
        {3, "Đã giao"},           // Delivered
        {4, "Đã hủy"},            // Cancelled
        {5, "Đã trả lại"},         // Returned
        {6, "Hoàn tiền"}          // Refund
    };
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        body {
            font-family: "Segoe UI", sans-serif;
            background-color: #f5f6fa;
        }

        .sidebar {
            width: 220px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #4a6fa5;
            color: #fff;
            padding-top: 20px;
        }

            .sidebar .nav-link {
                color: #f8f9fa;
                padding: 12px 20px;
                display: flex;
                align-items: center;
                gap: 10px;
                border-radius: 6px;
                transition: all 0.3s;
            }

                .sidebar .nav-link:hover {
                    background-color: #6b8fbf;
                    transform: translateX(3px);
                }

                .sidebar .nav-link.active {
                    background-color: #365880;
                    color: #ffc107;
                    box-shadow: inset 3px 0 0 #ffc107;
                }

        .header {
            height: 60px;
            position: fixed;
            top: 0;
            left: 220px;
            right: 0;
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
            z-index: 1000;
        }

        .main-content {
            margin-left: 220px;
            margin-top: 60px;
            padding: 20px;
        }

        .card-stat {
            border-radius: 12px;
            transition: transform 0.2s;
        }

            .card-stat:hover {
                transform: translateY(-5px);
            }

        @@media (max-width:768px) {
            .sidebar {
                position: relative;
                width: 100%;
                height: auto;
            }

            .header {
                left: 0;
            }

            .main-content {
                margin-left: 0;
                margin-top: 70px;
            }
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <a class="nav-link active" href="#"><i class="bi bi-house-door"></i> Dashboard</a>
        <a class="nav-link" href="/AdminOperations/AllOrders"><i class="bi bi-receipt"></i> Đơn hàng</a>
        <a class="nav-link" href="/Stock/Index"><i class="bi bi-archive"></i> Tồn kho</a>
        <a class="nav-link" href="/Genre/Index"><i class="bi bi-collection"></i> Thể loại</a>
        <a class="nav-link" href="/Book/Index"><i class="bi bi-book"></i> Sách</a>
        <a class="nav-link" href="/Reports/TopFiveSellingBooks"><i class="bi bi-bar-chart"></i> Bán chạy</a>
    </div>

    <!-- Header -->
    <div class="header">
        <div class="fw-bold fs-5">Admin Dashboard</div>
        <div class="d-flex gap-2 align-items-center">
            <span>@User.Identity?.Name</span>
            <a href="/Identity/Account/Manage/Index" class="btn btn-outline-primary btn-sm"><i class="bi bi-gear"></i> Quản lý</a>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" class="m-0">
                <button type="submit" class="btn btn-outline-danger btn-sm"><i class="bi bi-box-arrow-right"></i> Đăng xuất</button>
            </form>
        </div>
    </div>

    <!-- Main content -->
    <div class="main-content">

        <!-- Statistic cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card card-stat text-white bg-primary p-3">
                    <div class="card-body">
                        <h5>Tổng đơn hàng</h5>
                        <h3>@Model.TotalOrders</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stat text-white bg-success p-3">
                    <div class="card-body">
                        <h5>Doanh thu</h5>
                        <h3>@Model.TotalRevenue.ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stat text-white bg-warning p-3">
                    <div class="card-body">
                        <h5>Tổng sách</h5>
                        <h3>@Model.TotalBooks</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stat text-white bg-danger p-3">
                    <div class="card-body">
                        <h5>Tổng tồn kho</h5>
                        <h3>@Model.TotalStock</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table đơn hàng mới nhất -->
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5>Đơn hàng mới nhất</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Ngày</th>
                            <th>Khách hàng</th>
                            <th>Email</th>
                            <th>Thành tiền</th>
                            <th>Thanh toán</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.LatestOrders)
                        {
                            <tr>
                                <td>@order.CreateDate.ToString("dd-MM-yyyy")</td>
                                <td>@order.Name</td>
                                <td>@order.Email</td>
                                <td>@order.TotalAmount</td>
                                <td>@(order.IsPaid ? "Đã thanh toán" : "Chưa thanh toán")</td>
                                <td>
                                    @(orderStatusMap.ContainsKey(order.OrderStatusId)
                                        ? orderStatusMap[order.OrderStatusId]
                                        : "Không xác định")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
