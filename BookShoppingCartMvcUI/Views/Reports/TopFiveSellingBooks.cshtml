@model TopNSoldBooksVm
@{
    Layout = "_AdminLayout";
}

<div class="container-fluid mt-4">

    <h3 class="mb-3 text-primary">📈 Sách bán chạy</h3>

    @if (Model != null)
    {
        <!-- 🔍 FORM LỌC -->
        <form class="row g-2 align-items-center mb-3" asp-action="TopFiveSellingBooks" method="get">
            <div class="col-auto">
                <input type="date" class="form-control" name="sDate" />
            </div>
            <div class="col-auto">
                <input type="date" class="form-control" name="eDate" />
            </div>
            <div class="col-auto d-flex gap-2">
                <button type="submit" class="btn btn-success">Tìm</button>
                <a class="btn btn-warning" href="/Reports/TopFiveSellingBooks">Xóa</a>
            </div>
        </form>

        <!-- 🔹 Thông tin kết quả -->
        <h5 class="mb-3">
            Kết quả từ
            <span class="text-primary">@Model.StartDate.ToString("dd-MMM-yyyy")</span>
            đến
            <span class="text-primary">@Model.EndDate.ToString("dd-MMM-yyyy")</span>
        </h5>

        <!-- 🔶 Bảng kết quả -->
        @if (Model.TopNSoldBooks.Count() == 0)
        {
            <div class="alert alert-warning">
                Không có dữ liệu.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Sách</th>
                            <th>Lượt bán</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TopNSoldBooks)
                        {
                            <tr>
                                <td>@item.BookName by @item.AuthorName</td>
                                <td>@item.TotalUnitSold</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
    else
    {
        <div class="alert alert-danger">Something went wrong</div>
    }

</div>
