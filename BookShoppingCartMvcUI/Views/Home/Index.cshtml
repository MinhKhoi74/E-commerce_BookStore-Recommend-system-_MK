@model BookDisplayModel
@{

}
@* Nền đẹp toàn trang *@
<body class="m-0" style="background: linear-gradient(to right, #d0eefd, #ffffff); min-height: 100vh;">


    @* Khối tìm kiếm *@
    <div class="container py-5">
        <div class="p-4 rounded-4 shadow-lg" style="background: linear-gradient(to right, #2c3e50, #16a085); max-width: 900px; margin: 0 auto;">
            <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center text-white">
                <div class="col-12">
                    <label class="visually-hidden" for="genreId">Genres</label>
                    <select class="form-select rounded-pill" id="genreId" name="genreId">
                        <option selected disabled>Thể loại</option>
                        @foreach (var genre in Model.Genres)
                        {
                            <option selected="@(genre.Id == Model.GenreId)" value="@genre.Id">@genre.GenreName</option>
                        }
                    </select>
                </div>

                <div class="col flex-grow-1">
                    <label class="visually-hidden" for="sterm">Search by title</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" class="form-control border-start-0 rounded-end-pill" value="@Model.STerm" id="sterm" name="sterm" placeholder="Tìm kiếm tên sách...">
                    </div>
                </div>

                <div class="col-12 d-flex gap-2">
                    <button type="submit" class="btn btn-success btn-sm rounded-pill">
                        <i class="bi bi-funnel"></i> Tìm kiếm
                    </button>
                    <a href="/Home/Index" class="btn btn-outline-primary btn-sm rounded-pill">
                        <i class="bi bi-arrow-clockwise"></i> Làm mới
                    </a>
                </div>
            </form>
        </div>
    </div>


    @* Danh sách sách *@
    <div class="container">
        <div class="w-100 d-flex flex-wrap justify-content-center">
            @foreach (var book in Model.Books)
            {
                <div class="card mx-3 mb-4 shadow-sm border border-secondary-subtle" style="width: 16rem;">
                    <img src="/images/@(string.IsNullOrEmpty(book.Image) ? "NoImage.png" : book.Image)"
                         class="card-img-top"
                         alt="@book.BookName"
                         style="height: 240px; object-fit: cover; border-bottom: 1px solid #dee2e6;" />

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title fw-bold text-primary text-truncate" title="@book.BookName">@book.BookName</h6>
                        <p class="card-text mb-2">
                            <b>Giá:</b> @book.Price.ToString("N0") VNĐ
                        </p>

                        <div class="mt-auto d-grid gap-2">
                            @if (book.Quantity > 0)
                            {
                                <button type="button" onclick="add(@book.Id)" class="btn btn-success btn-sm rounded-pill">
                                    <i class="bi bi-cart-plus"></i> Thêm giỏ hàng
                                </button>
                            }
                            else
                            {
                                <span class="text-danger small border border-danger rounded text-center py-1 px-2">Hết hàng</span>
                            }

                            <a asp-controller="DetailedBook"
                               asp-action="Details"
                               asp-route-id="@book.Id"
                               class="btn btn-outline-primary btn-sm rounded-pill">
                                <i class="bi bi-info-circle"></i> Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>


@*thêm sách vào giỏ hàng*@
@section Scripts{
    <script>
        async function add(bookId) {
             var usernameEl = document.getElementById("username");
        if(usernameEl==null){
            window.location.href = "/Identity/Account/Login";
          //var username=usernameEl.innerText;
          //  if(username.length<1){
          //      window.location.href="/Identity/Account/Login";
          //  }
        }
            try {
                var response = await fetch(`/Cart/AddItem?bookId=${bookId}`);
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                    window.location.href = "#cartCount";
                    alert("Đã thêm vào giỏ hàng!");
                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>
}


