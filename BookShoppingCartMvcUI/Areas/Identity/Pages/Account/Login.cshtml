@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 text-primary">@ViewData["Title"]</h3>

                    <section>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>

                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100 mb-3">Log in</button>

                            <div class="text-center">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none d-block mb-2">Quên mật khẩu?</a>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none d-block mb-2">Tạo tài khoản mới</a>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none d-block">Gửi email xác nhận tài khoản</a>
                            </div>
                        </form>
                    </section>

                    <hr class="my-4" />

                    <section>
                        <h5 class="text-center text-secondary mb-3">Đăng nhập bằng phương thức khác</h5>
                        @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div class="alert alert-warning text-center">
                                There are no external authentication services configured.
                                <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="alert-link">Learn more</a>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-danger w-100 mb-2"
                                            name="provider" value="@provider.Name"
                                            title="Log in using your @provider.DisplayName account">
                                        <i class="bi bi-google me-2"></i> Log in with @provider.DisplayName
                                    </button>
                                }
                            </form>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
