@page
@model BookShoppingCartMvcUI.Areas.Identity.Pages.Account.ConfirmEmailModel
@{
    ViewData["Title"] = "Xác thực Email";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h2 class="card-title">@ViewData["Title"]</h2>
            <p class="mt-3">@Model.StatusMessage</p>

            @if (Model.StatusMessage.Contains("thành công"))
            {
                <a asp-page="./Login" class="btn btn-success mt-3">Đăng nhập</a>
            }
            else
            {
                <a asp-page="/Index" class="btn btn-secondary mt-3">Quay lại trang chủ</a>
            }
        </div>
    </div>
</div>
